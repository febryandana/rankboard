{
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2"
  },
  "scripts": {
    "prepare": "husky"
  },
  "lint-staged": {
    "backend/**/*.{ts,tsx}": [
      "prettier --write",
      "cd backend && eslint . --fix"
    ],
    "frontend/**/*.{ts,tsx}": [
      "prettier --write",
      "cd frontend && eslint . --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
